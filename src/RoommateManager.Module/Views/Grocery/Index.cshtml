@model IEnumerable<RoommateManager.Module.Controllers.GroceryItemViewModel>

@{
    ViewData["Title"] = "Grocery List";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Roommate Manager</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif;
        }

        .navbar {
            margin-bottom: 20px;
        }

        .purchased-row {
            background-color: #d4edda;
            text-decoration: line-through;
            opacity: 0.7;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Roommate Manager</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Activity" asp-action="MyActivities">My Activities</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Activity" asp-action="History">History</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Note" asp-action="Index">Notes</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Grocery" asp-action="Index">Grocery</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>ðŸ›’ @ViewData["Title"]</h1>
            <a href="/Admin/Contents/ContentItems/GroceryItem" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add Item
            </a>
        </div>
        <p>Shared grocery list for all roommates.</p>
        <a asp-controller="Grocery" asp-action="Create" class="btn btn-primary">
            Add Item
        </a>
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <strong>No items yet!</strong> Click "Add Item" above to create your first grocery item.
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body">
                    <table class="table table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>Item</th>
                                <th>Quantity</th>
                                <th>Notes</th>
                                <th>Added By</th>
                                <th style="width: 180px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="@(item.IsPurchased ? "purchased-row" : "")">
                                    <td>
                                        <strong>@item.ItemName</strong>
                                        @if (item.IsPurchased)
                                        {
                                            <span class="badge badge-success ml-2">âœ“ Purchased</span>
                                        }
                                    </td>
                                    <td>@item.Quantity @item.Unit</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Notes))
                                        {
                                            <small class="text-muted">@item.Notes</small>
                                        }
                                    </td>
                                    <td>@item.AddedBy</td>
                                    <td>
                                        @if (!item.IsPurchased)
                                        {
                                            <form asp-controller="Grocery" asp-action="MarkAsPurchased" method="post"
                                                style="display: inline;">
                                                <input type="hidden" name="contentItemId" value="@item.ContentItemId" />
                                                <button type="submit" class="btn btn-success btn-sm"
                                                    onclick="return confirm('Mark as purchased?');">
                                                    âœ“ Mark Purchased
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <small class="text-muted">
                                                By @item.PurchasedBy
                                                <br />
                                                @item.PurchasedDate?.ToLocalTime().ToString("MMM dd")
                                            </small>
                                        }
                                        @if (item.IsPurchased)
                                        {
                                            <form asp-action="Reopen" asp-route-contentItemId="@item.ContentItemId" method="post"
                                                style="display:inline;">
                                                <button type="submit" class="btn btn-warning btn-sm">Reopen</button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="mt-3">
                <p class="text-muted">
                    <small>
                        <strong>Total:</strong> @Model.Count() |
                        <strong>Pending:</strong> @Model.Count(i => !i.IsPurchased) |
                        <strong>Purchased:</strong> @Model.Count(i => i.IsPurchased)
                    </small>
                </p>
            </div>
        }
    </div>

    <footer class="footer mt-5 py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">Roommate Manager &copy; @DateTime.Now.Year</span>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>