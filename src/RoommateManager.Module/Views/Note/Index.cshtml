@model IEnumerable<RoommateManager.Module.Controllers.NoteViewModel>

@{
    ViewData["Title"] = "My Notes";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Roommate Manager</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif;
        }

        .navbar {
            margin-bottom: 20px;
        }

        .pinned-note {
            border: 2px solid #ffc107;
        }

        .note-card {
            transition: transform 0.2s;
        }

        .note-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Roommate Manager</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Activity" asp-action="MyActivities">My Activities</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Activity" asp-action="History">History</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Note" asp-action="Index">Notes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Grocery" asp-action="Index">Grocery</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>üìù @ViewData["Title"]</h1>
            <a asp-controller="Note" asp-action="Create" class="btn btn-primary">
                Create Note
            </a>
        </div>
        <p>Your private notes - only visible to you.</p>

        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <strong>No notes yet!</strong> Click "Create Note" above to add your first note.
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var note in Model)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card note-card h-100 @(note.IsPinned ? "pinned-note" : "")">
                            @if (note.IsPinned)
                            {
                                <div class="card-header bg-warning text-dark">
                                    <i class="fas fa-thumbtack"></i> Pinned
                                </div>
                            }
                            <div class="card-body">
                                <h5 class="card-title">@note.NoteTitle</h5>
                                @if (!string.IsNullOrEmpty(note.Category))
                                {
                                    <span class="badge badge-info mb-2">@note.Category</span>
                                }
                                <p class="card-text">@note.NoteContent</p>
                                @if (!string.IsNullOrEmpty(note.CreatedBy))
                                {
                                    <p class="text-muted mb-0">
                                        <small><em>By: @note.CreatedBy</em></small>
                                    </p>
                                }
                            </div>
                            <div class="card-footer text-muted d-flex justify-content-between align-items-center">
                                <small>Modified: @note.ModifiedDate?.ToLocalTime().ToString("MMM dd, yyyy")</small>
                                <a asp-controller="Note" asp-action="Edit" asp-route-id="@note.ContentItemId"
                                    class="btn btn-sm btn-primary">Edit
                                </a>
                                <form asp-action="Delete" asp-route-id="@note.ContentItemId" method="post"
                                    style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-danger"
                                        onclick="return confirm('Delete this note?');">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="mt-3">
                <p class="text-muted">
                    <small>
                        <strong>Total notes:</strong> @Model.Count() |
                        <strong>Pinned:</strong> @Model.Count(n => n.IsPinned)
                    </small>
                </p>
            </div>
        }
    </div>

    <footer class="footer mt-5 py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">Roommate Manager &copy; @DateTime.Now.Year</span>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>