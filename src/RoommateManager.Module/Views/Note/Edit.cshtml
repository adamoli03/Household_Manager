@model RoommateManager.Module.Controllers.NoteViewModel

@{
    ViewData["Title"] = "Edit Note";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Roommate Manager</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Roommate Manager</a>
            <div class="ml-auto">
                <a asp-controller="Note" asp-action="Index" class="btn btn-outline-light btn-sm">← Back to Notes</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h1>✏️ Edit Note</h1>
        <hr />

        <div class="row">
            <div class="col-md-8">
                <form asp-action="Edit" asp-route-id="@Model.ContentItemId" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group">
                        <label asp-for="NoteTitle" class="control-label">Title *</label>
                        <input asp-for="NoteTitle" class="form-control" />
                        <span asp-validation-for="NoteTitle" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="NoteContent" class="control-label">Content *</label>
                        <textarea asp-for="NoteContent" class="form-control" rows="8"></textarea>
                        <span asp-validation-for="NoteContent" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Category" class="control-label">Category</label>
                        <input asp-for="Category" class="form-control" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check">
                        <input asp-for="IsPinned" class="form-check-input" type="checkbox" />
                        <label asp-for="IsPinned" class="form-check-label">
                            Pin this note
                        </label>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
