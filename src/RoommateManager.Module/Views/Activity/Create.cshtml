@model RoommateManager.Module.Controllers.ActivityViewModel

@{
    ViewData["Title"] = "Create Activity";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Roommate Manager</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Roommate Manager</a>
            <div class="ml-auto">
                <a asp-controller="Activity" asp-action="MyActivities" class="btn btn-outline-light btn-sm">← Back to Activities</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h1>✅ Create New Activity</h1>
        <hr />

        <div class="row">
            <div class="col-md-8">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group">
                        <label asp-for="ActivityName" class="control-label">Activity Name *</label>
                        <input asp-for="ActivityName" class="form-control" placeholder="e.g., Clean the kitchen" />
                        <span asp-validation-for="ActivityName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe what needs to be done"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="RoomType" class="control-label">Room Type *</label>
                        <input asp-for="RoomType" class="form-control" placeholder="e.g., Kitchen, Bathroom, Living Room" />
                        <span asp-validation-for="RoomType" class="text-danger"></span>
                        <small class="form-text text-muted">Activities will be grouped by room type</small>
                    </div>

                    <div class="form-group">
                        <label asp-for="EstimatedMinutes" class="control-label">Estimated Time (minutes)</label>
                        <input asp-for="EstimatedMinutes" type="number" class="form-control" value="15" min="0" />
                        <span asp-validation-for="EstimatedMinutes" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Create Activity
                        </button>
                        <a asp-action="MyActivities" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
