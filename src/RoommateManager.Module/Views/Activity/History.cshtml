@model IEnumerable<RoommateManager.Module.Controllers.ActivityViewModel>

@{
    ViewData["Title"] = "Activity History";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Roommate Manager</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif; }
        .navbar { margin-bottom: 20px; }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Roommate Manager</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Activity" asp-action="MyActivities">My Activities</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Activity" asp-action="History">History</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Note" asp-action="Index">Notes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Grocery" asp-action="Index">Grocery</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h1>üìä @ViewData["Title"]</h1>
        <p>View all completed activities and their completion dates.</p>
        
        <div class="mb-3">
            <a asp-controller="Activity" asp-action="MyActivities" class="btn btn-primary">
                ‚Üê Back to My Activities
            </a>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <strong>No completed activities yet.</strong> Start completing tasks to see them here!
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>Room</th>
                                <th>Activity</th>
                                <th>Completed By</th>
                                <th>Completed Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var activity in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="badge badge-primary">@activity.RoomType</span>
                                    </td>
                                    <td>
                                        <strong>@activity.ActivityName</strong>
                                        @if (!string.IsNullOrEmpty(activity.Description))
                                        {
                                            <br />
                                            <small class="text-muted">@activity.Description</small>
                                        }
                                    </td>
                                    <td>@activity.CompletedBy</td>
                                    <td>@activity.CompletedDate?.ToLocalTime().ToString("MMM dd, yyyy h:mm tt")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            
            <div class="mt-3">
                <p class="text-muted">
                    <small><strong>Total completed activities:</strong> @Model.Count()</small>
                </p>
            </div>
        }
    </div>

    <footer class="footer mt-5 py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">Roommate Manager &copy; @DateTime.Now.Year</span>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
