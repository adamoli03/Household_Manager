<!DOCTYPE html>
<html lang="{{ Culture.Name }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% page_title Site.SiteName, position: "before", separator: " - " %}</title>

    {% resources type: "Meta" %}

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    {% resources type: "HeadLink" %}
    {% resources type: "Stylesheet" %}
    {% resources type: "HeadScript" %}

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .navbar {
            background-color: #2c3e50;
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }
        .navbar-brand {
            color: #fff !important;
            font-weight: bold;
            font-size: 1.5rem;
        }
        .nav-link {
            color: #ecf0f1 !important;
            transition: color 0.3s;
        }
        .nav-link:hover {
            color: #3498db !important;
        }
        .container-main {
            margin-top: 2rem;
            margin-bottom: 2rem;
        }
        footer {
            background-color: #2c3e50;
            color: #ecf0f1;
            padding: 1.5rem 0;
            margin-top: 3rem;
        }
        .card {
            border-radius: 8px;
            box-shadow: 0 2px 4px rgba(0,0,0,.05);
        }
    </style>
</head>
<body dir="{{ Culture.Dir }}">
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Household Manager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/my-activities">Activities</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/grocery-list">Grocery List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/my-notes">My Notes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/activity-history">History</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin">Admin</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container container-main">
        {% render_body %}
    </div>

    <footer class="text-center">
        <div class="container">
            <p class="mb-0">&copy; 2024 Household Manager - Student Project</p>
        </div>
        {% render_section "Footer", required: false %}
    </footer>

    {% script name:"jquery", use_cdn:"true", at:"Foot" %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    {% resources type: "FootScript" %}
</body>
</html>