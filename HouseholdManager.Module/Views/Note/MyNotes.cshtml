@using OrchardCore.ContentManagement
@using HouseholdManager.Module.Models
@model IEnumerable<ContentItem>

@{
    ViewData["Title"] = "My Notes";
    var currentUserId = ViewData["CurrentUserId"]?.ToString() ?? "";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1>My Notes</h1>
        <p class="text-muted mb-0">Manage your personal notes</p>
    </div>
    <a asp-controller="Note" asp-action="Create" class="btn btn-primary">Create New Note</a>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var item in Model)
        {
            var notePart = item.As<NotePart>();
            if (notePart != null)
            {
                <div class="col-md-6 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@notePart.Title</h5>
                            <p class="card-text">@notePart.NoteContent</p>
                            <small class="text-muted d-block mb-2">Created: @item.CreatedUtc?.ToString("yyyy-MM-dd HH:mm")</small>
                            @if (!string.IsNullOrEmpty(notePart.UserId))
                            {
                                <small class="text-muted d-block mb-2">Owner: @notePart.UserId</small>
                            }
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="/admin/Contents/ContentItems/@item.ContentItemId/Edit" class="btn btn-sm btn-secondary">Edit</a>
                            <form asp-controller="Note" asp-action="Delete" asp-route-contentItemId="@item.ContentItemId" method="post" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this note?');">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
}
else
{
    <p class="alert alert-info">No notes found. Click "Create New Note" to get started!</p>
}
