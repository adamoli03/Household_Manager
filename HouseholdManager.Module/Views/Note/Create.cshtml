@{
    ViewData["Title"] = "Create Note";
}

<h1>Create New Note</h1>

<form asp-controller="Note" asp-action="Create" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label for="title" class="form-label">Title *</label>
        <input type="text" class="form-control" id="title" name="title" required placeholder="Note title">
        <div class="invalid-feedback">Please provide a title.</div>
    </div>

    <div class="mb-3">
        <label for="noteContent" class="form-label">Content</label>
        <textarea class="form-control" id="noteContent" name="noteContent" rows="6" placeholder="Write your note here..."></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Create Note</button>
    <a asp-controller="Note" asp-action="MyNotes" class="btn btn-secondary">Cancel</a>
</form>

<script>
    // Bootstrap validation
    (function() {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms).forEach(function(form) {
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>
