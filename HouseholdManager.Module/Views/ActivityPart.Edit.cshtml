@model HouseholdManager.Module.ViewModels.ActivityPartViewModel

<fieldset class="form-group">
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RoomType" class="form-label">Room Type</label>
        <input asp-for="RoomType" class="form-control" placeholder="e.g., Kitchen, Bathroom" />
        <span asp-validation-for="RoomType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AssignedUserId" class="form-label">Assigned User ID</label>
        <input asp-for="AssignedUserId" class="form-control" placeholder="e.g., admin" />
        <span asp-validation-for="AssignedUserId" class="text-danger"></span>
        <small class="form-text text-muted">Enter the exact username of the person assigned to this activity</small>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="IsCompleted" class="form-check-input" type="checkbox" />
        <label asp-for="IsCompleted" class="form-check-label">Mark as Completed</label>
    </div>
</fieldset>
